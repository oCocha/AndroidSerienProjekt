<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg_standart">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/rounded_corner_with_bg">


        <TextView
            android:id="@+id/detail_series_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/detail_series_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_description"
            android:padding="5dp"
            android:layout_below="@id/detail_series_name"
            android:layout_alignParentLeft="true"/>



        <TextView
            android:id="@+id/rating_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="@string/fragmentRating"
            android:layout_toRightOf="@id/detail_series_image"
            android:layout_below="@id/detail_series_name"/>

        <TextView
            android:id="@+id/detail_series_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@id/detail_series_image"
            android:layout_below="@id/rating_head"/>



        <TextView
            android:id="@+id/year_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="@string/fragmentYear"
            android:layout_toRightOf="@id/detail_series_image"
            android:layout_below="@id/detail_series_rating" />

        <TextView
            android:id="@+id/detail_series_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@id/detail_series_image"
            android:layout_below="@id/year_head"/>



        <TextView
            android:id="@+id/actor_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:text="@string/fragmentActor"
            android:layout_below="@id/detail_series_year" />

        <TextView
            android:id="@+id/detail_series_actors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/actor_head"/>



        <TextView
            android:id="@+id/plot_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:text="@string/fragmentDescription"
            android:layout_below="@id/detail_series_actors" />

        <TextView
            android:id="@+id/detail_series_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/plot_head"/>

        <Button
            android:id="@+id/detail_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/addButton"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/detail_series_description"
            android:layout_centerHorizontal="true"
            android:background="@drawable/style_for_buttons"/>

    </RelativeLayout>

</ScrollView>