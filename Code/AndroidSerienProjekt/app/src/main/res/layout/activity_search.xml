<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.serien.android.androidserienprojekt.activities.SearchActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:text="@string/seriesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_above="@+id/yearTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/yearTextView"
        android:text="@string/seriesYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_above="@+id/actorsTextView"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/actorsTextView"
        android:text="@string/seriesActors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_above="@+id/ratingTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ratingTextView"
        android:text="@string/seriesRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_above="@+id/plotTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/plotTextView"
        android:text="@string/seriesPlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_above="@+id/addButton"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/seriesEditText"
        android:text="@string/seriesEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_alignTop="@+id/searchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchButton"
        android:id="@+id/searchButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/seriesEditText"
        android:layout_toEndOf="@+id/seriesEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addButton"
        android:id="@+id/addButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seriesImageView"
        android:layout_above="@+id/nameTextView"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
