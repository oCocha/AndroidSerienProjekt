<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.serien.android.androidserienprojekt.activities.UserActivity">


    <EditText
        android:id="@+id/user_editText"
        android:hint="@string/userEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="24sp"
        android:paddingTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/accept_Button"
        android:layout_toStartOf="@+id/accept_Button" />

    <Button
        android:id="@+id/accept_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceptButton"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>

